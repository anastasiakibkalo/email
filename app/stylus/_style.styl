
.container 
    max-width 680px
    padding-left 0
    padding-right 0
    padding-top 0
    padding-bottom 0
    margin 0 auto
    background #080d20
    width 100%

.logo
    max-width 120px
    display block

.header
    background-image url('https://raw.githubusercontent.com/anastasiakibkalo/email/master/app/img/1st_screen%402x.png')
    background-repeat no-repeat
    background-size cover
    background-position center top
    &-wrapper
        max-width 420px
    &-logo
        max-width 420px
        &--wrap
            padding-top 30px
    &-description
        color #44acff
        font-family 'Arial', sans-serif
        font-size 15px
        font-weight 700
        line-height 20px
        max-width 420px
        padding-left 10px
        padding-right 10px
        padding-top 4px
        &--wrap
            p 
                color #44acff
                font-family 'Arial', sans-serif
                font-size 15px
                font-weight 700
                line-height 20px

.top
    &-img
        img
            width 100%

.section1 
    background-image url('https://raw.githubusercontent.com/anastasiakibkalo/email/master/app/img/Rectangle.png')
    background-size cover
    &-title 
        padding-top 67px
        padding-right 10px
        padding-left 10px
        h1
            color #ffffff
            font-family 'Arial', sans-serif
            font-size 17px
            font-weight 700
            line-height 25px
    &-description
        padding-top 13px
        padding-right 10px
        padding-left 10px
        padding-bottom 16px
        p
            color rgba(255, 255, 255, .5)
            font-family 'Arial', sans-serif
            font-size 15px
            line-height 25px
        strong 
            font-family: 'Arial', sans-serif;
            font-weight 700
    &-subtitle
        padding-top 45px
        h2
            color #ffffff
            font-family: 'Arial', sans-serif;
            font-size 35px
            line-height 40px
            text-transform uppercase
            font-weight 400
    &-offers
        padding-top 21px
        padding-bottom 6px
    &-button
        padding-top 34px
            
.table
    &-wrapper__content
        max-width 440px
        width 100%

.offers
    &-title
        &--item
            color #ffffff
            font-family: 'Arial', sans-serif;
            font-size 12px
            font-weight 700
            line-height 15px
            text-transform uppercase
            padding-right 4px
        &--vspace
            width 72px
            &-2
                width 28px
        &-w
            width 116px
    &-item
        padding-top 5px
        padding-bottom 5px
        padding-left 10px
        padding-right 10px
        table
            width 100%
        &-wrap 
            border-radius 5px
            background-color #ffffff
        &--title
            color #000000
            font-family: 'Arial', sans-serif;
            font-size 20px
            font-weight 700
            line-height 25px
            text-transform uppercase
            padding 3px 0 10px 15px
            width 154px
        &--block
            padding 16px 0 17px
        &--vspace
            width 23px
    &-price
        &--block
            color #44acff
            font-family: 'Arial', sans-serif;
            font-size 20px
            font-weight 700
            line-height 25px
            strong
                color #000000
                font-family: 'Arial', sans-serif;
                text-decoration line-through
                font-size 20px
                padding-right 6px
                font-weight 400
        &--sub
            color rgba(43, 45, 51, .5)
            font-family: 'Arial', sans-serif;
            font-size 12px
            line-height 9px

.button
    a
        border-radius 5px
        background-color #44acff
        color #ffffff
        font-family: 'Arial', sans-serif;
        font-size 15px
        font-weight 700
        line-height 25px
        text-transform uppercase
        padding 21px 50px 22px
        text-decoration none

.footer
    &-info
        padding-top 80px
        padding-right 10px
        padding-left 10px
        padding-bottom 50px
        p
            display inline-block
            opacity 0.5
            color #ffffff
            font-family "Arial", sans-serif;
            font-size 16px
            line-height 20px
    &-item
        &-left
            text-align left
        &-right
            text-align right

.social
    width 29px
    height 29px
    display inline-block
    vertical-align middle
    margin-left 7px
    img     
        width 29px
        height 29px
        display inline-block


.w-100
    width 100%