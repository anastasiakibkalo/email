
.container 
    max-width 680px
    padding-left 0
    padding-right 0
    padding-top 0
    padding-bottom 0
    margin 0 auto
    background #080d20
    width 100%

.logo
    max-width 120px
    display block

.header
    background-image url('https://raw.githubusercontent.com/anastasiakibkalo/email/master/app/img/1st_screen%402x.png')
    // padding-bottom 410px
    background-repeat no-repeat
    background-size cover
    background-position center top
    &-wrapper
        max-width 420px
    &-logo
        max-width 420px
        &--wrap
            padding-top 30px
    &-description
        max-width 420px
        &--wrap
            padding-top 299px
            p 
                color #44acff
                font-family Arial
                font-size 15px
                font-weight 700
                line-height 20px


.section1 
    background-image url('https://raw.githubusercontent.com/anastasiakibkalo/email/master/app/img/Rectangle.png')
    background-size cover
    &-title 
        padding-top 68px
        h1
            color #ffffff
            font-family: 'Arial', sans-serif;
            font-size 17px
            font-weight 700
            line-height 25px
    &-description
        padding 10px 0 16px
        p
            color rgba(255, 255, 255, .5)
            font-family: 'Arial', sans-serif;
            font-size 15px
            line-height 25px
        strong 
            font-family: 'Arial', sans-serif;
            font-weight 700
    &-subtitle
        padding-top 43px
        h2
            color #ffffff
            font-family: 'Arial', sans-serif;
            font-size 35px
            line-height 40px
            text-transform uppercase
            font-weight 400
    &-offers
        padding-top 21px
        padding-bottom 4px
    &-button
        padding-top 31px
            
.table
    &-wrapper__content
        max-width 420px

.offers
    &-title
        &--item
            color #ffffff
            font-family: 'Arial', sans-serif;
            font-size 12px
            font-weight 700
            line-height 15px
            text-transform uppercase
            padding-right 4px
        &--vspace
            width 72px
    &-item
        padding-top 5px
        padding-bottom 5px
        &-wrap 
            border-radius 5px
            background-color #ffffff
        &--title
            color #000000
            font-family: 'Arial', sans-serif;
            font-size 20px
            font-weight 700
            line-height 25px
            text-transform uppercase
            padding 3px 0 10px 15px
            width 154px
        &--block
            padding 14px 0 13px
        &--vspace
            width 23px
    &-price
        &--block
            color #44acff
            font-family: 'Arial', sans-serif;
            font-size 20px
            font-weight 700
            line-height 25px
            strong
                color #000000
                font-family: 'Arial', sans-serif;
                text-decoration line-through
                font-size 20px
                padding-right 6px
                font-weight 400
        &--sub
            color rgba(43, 45, 51, .5)
            font-family: 'Arial', sans-serif;
            font-size 12px
            line-height 9px

.button
    a
        border-radius 5px
        background-color #44acff
        color #ffffff
        font-family: 'Arial', sans-serif;
        font-size 15px
        font-weight 700
        line-height 25px
        text-transform uppercase
        padding 21px 50px 24px

.footer
    &-info
        padding 80px 0
        p
            display inline-block
            opacity 0.5
            color #ffffff
            font-family "Arial", sans-serif;
            font-size 16px
            line-height 20px

.social
    width 29px
    height 29px
    display inline-block
    vertical-align middle
    margin-left 7px
    img     
        width auto
        display inline-block

           

